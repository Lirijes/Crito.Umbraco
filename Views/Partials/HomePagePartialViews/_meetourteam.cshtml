@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using Umbraco.Cms.Web.Common.PublishedModels;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.PublishedContent;

 <section class="meetourteam">
    <div class="container">
        <h5 class="small-heading">@Model.Value("meetOurTeamHeader")</h5>
        <div class="meetourteamheader">
            <h1 class="title">@Model.Value("meetOurTeamTitle")</h1>
            <a href="@Model.Value("meetOurTeamButtonUrl")" class="btn-theme btn-theme-light">@Model.Value("meetOurTeamButtonText") <i class="fa-solid fa-arrow-up-right"></i></a>
        </div>
        <div class="employees">
            @Html.GetBlockListHtml(Model.MeetOurTeamEmployeeSection)
        </div>
        <div class="dots">
            <div class="slide-dots"></div>
            <div class="slide-dots"></div>
            <div class="slide-dots"></div>
            <div class="slide-dots"></div>
            <div class="slide-dots"></div>
        </div>
        <div class="testimonial">
            <div class="tesimonial-header">
                <h5 class="small-heading">@Model.Value("testimonialHeading")</h5>
                <h1>@Model.Value("testimonialTitle")</h1>
            </div>
            <div class="client-card">
                @Html.GetBlockListHtml(Model.TestimonialClientsComments)
            </div>
            <a href="@Model.Value("testimonialButtonUrl")" class="btn-dark-theme btn-reviews">@Model.Value("testimonialButtonText") <i class="fa-solid fa-arrow-up-right"></i></a>
        </div>
    </div>
</section>